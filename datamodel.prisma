type User {
  id: ID! @unique
  username: String! @unique
  email: String! @unique
  name: String @default(value: "")
  bio: String
  following: [User!]! @relation(name: "FollowRelation")
  followers: [User!]! @relation(name: "FollowRelation")
  posts: [Post!]!
  likes: [Like!]!
  comments: [Comment!]!
  chats: [Chat!]!
}

type Post {
  id: ID! @unique
  location: String
  caption: String!
  user: User!
  files: [File!]!
  likes: [Like!]!
  comments: [Comment!]!
}

type Like {
  id: ID! @unique
  user: User!
  post: Post!
}

type Comment {
  id: ID! @unique
  text: String!
  user: User!
  post: Post!
}

type File {
  id: ID! @unique
  url: String!
  post: Post!
}

type Chat {
  id: ID! @unique
  participants: [User!]!
  message: [Message!]!
}

type Message {
  id: ID! @unique
  text: String!
  from: User! @relation(name: "From")
  to: User! @relation(name: "To")
  chat: Chat!
}